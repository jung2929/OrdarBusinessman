<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/product_q"
            android:text="Q"
            android:textSize="20sp"
            android:textColor="@color/color_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/product_qna_q_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/product_q"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/product_q"
            android:textColor="@color/color_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/product_qna_q_contents"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_q"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/product_qna_q_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/product_q"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/product_qna_q_id"
            android:textColor="@color/color_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/product_qna_q_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/product_q"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:textColor="@color/color_gray"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignBottom="@+id/product_qna_q_contents"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/heart" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_soft_gray">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="15dp">

            <TextView
                android:text="A"
                android:textColor="@color/color_main"
                android:id="@+id/product_a"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/product_qna_a_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/product_a"
                android:layout_marginLeft="5dp"
                android:text="dfsdfsdfsd"
                android:layout_toRightOf="@+id/product_a"
                android:textColor="@color/color_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/product_qna_a_contents"
                android:layout_width="250dp"
                android:text="dfsdfsdfsd"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_a"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_gray"
                android:textSize="12sp" />



            <TextView
                android:id="@+id/product_qna_a_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dfsdfsdfsd"
                android:layout_alignBottom="@+id/product_a"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/color_gray"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>