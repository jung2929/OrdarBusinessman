<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignTop="@+id/search_tab"
            android:background="@color/color_white" />

        <LinearLayout
            android:id="@+id/search_tab"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:id="@+id/search_tab_recent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/search_tab_recent"
                android:textColor="@color/color_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/search_tab_hot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/search_tab_hot"
                android:textColor="@color/color_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_tab_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/search_tab">

            <TextView
                android:id="@+id/search_tab_recent_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_red" />

            <TextView
                android:id="@+id/search_tab_hot_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_white" />


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignBottom="@+id/search_tab_line"
            android:background="@color/color_light_gray" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/color_red" />
    </LinearLayout>


</RelativeLayout>