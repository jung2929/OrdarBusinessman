<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_back"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@id/product_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/product_img"
        android:text="[해발500포크] 냉장삼겹살 수육용"
        android:textColor="@color/color_gray"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/product_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/product_img"
        android:text="오다가"
        android:textColor="@color/color_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/product_price_title"
        android:text="1,2300원"
        android:textColor="@color/color_main"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/product_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/product_price"
        android:text="10개"
        android:textColor="@color/color_gray"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/product_right_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/cart_main_color"
        android:layout_alignTop="@+id/product_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_soft_gray"
        android:layout_alignParentBottom="true" />

</RelativeLayout>