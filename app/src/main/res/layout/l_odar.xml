<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cart_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:onClick="onClick">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/del_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@color/color_soft_gray"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="수령정보"
                    android:textColor="@color/color_gray"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/cart_name"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:background="@drawable/underline_main_color"
                        android:hint="이름"
                        android:inputType="textNoSuggestions"
                        android:maxLength="30"
                        android:nextFocusDown="@+id/cart_adr"
                        android:onClick="onClick"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:textColor="@color/color_gray"
                        android:textColorHint="@color/color_text_light"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/cart_adr"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:background="@drawable/underline_main_color"
                            android:hint="주소지"
                            android:nextFocusDown="@+id/cart_adr2"
                            android:inputType="textNoSuggestions"
                            android:maxLength="30"
                            android:onClick="onClick"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:textColor="@color/color_gray"
                            android:textColorHint="@color/color_text_light"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/cart_post"
                            android:layout_width="78dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/box_gray"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="우편번호검색"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/cart_adr2"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:background="@drawable/underline_main_color"
                        android:hint="상세주소지"
                        android:inputType="textNoSuggestions"
                        android:maxLength="30"
                        android:onClick="onClick"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:textColor="@color/color_gray"
                        android:textColorHint="@color/color_text_light"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/cart_phone"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:background="@drawable/underline_main_color"
                        android:hint="연락처"
                        android:inputType="textNoSuggestions"
                        android:maxLength="30"
                        android:onClick="onClick"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:textColor="@color/color_gray"
                        android:textColorHint="@color/color_text_light"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="4dp"
                            android:text="수령시간"
                            android:textColor="@color/color_light_gray"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/am"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/radio_unch"
                            android:onClick="onClick" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:onClick="onClick"
                            android:text="아침"
                            android:textColor="@color/color_gray"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/am2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/radio_unch"
                            android:onClick="onClick" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:onClick="onClick"
                            android:text="오전"
                            android:textColor="@color/color_gray"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/pm"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/radio_unch"
                            android:onClick="onClick" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:onClick="onClick"
                            android:text="오후"
                            android:textColor="@color/color_gray"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/pm2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/radio_ch"
                            android:onClick="onClick" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="저녁"
                            android:textColor="@color/color_gray"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <EditText
                        android:id="@+id/cart_memo"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:background="@drawable/underline_main_color"
                        android:hint="요청사항"
                        android:inputType="textNoSuggestions"
                        android:maxLength="30"
                        android:onClick="onClick"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:textColor="@color/color_gray"
                        android:textColorHint="@color/color_text_light"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/del_back"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@color/color_soft_gray"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="주문상품정보"
                    android:textColor="@color/color_gray"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cart_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:scrollbars="none"></android.support.v7.widget.RecyclerView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="상품쿠폰"
                        android:textColor="@color/color_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/coupon"
                        android:text="0장"
                        android:textColor="@color/color_gray"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/coupon"
                        android:layout_width="78dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/box_gray"
                        android:gravity="center"
                        android:text="조회"
                        android:textSize="10sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_soft_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="예상 주문 오다가"
                        android:textColor="@color/color_gray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/price_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/price_1"
                        android:layout_marginTop="8dp"
                        android:text="쿠폰 적용"
                        android:textColor="@color/color_gray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/price_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/price_2"
                        android:layout_marginTop="8dp"
                        android:text="총 예상 오다"
                        android:textColor="@color/color_gray"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/price_odar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/price_1"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/price_2"
                        android:layout_marginTop="8dp"
                        android:text="173,070원"
                        android:textColor="@color/color_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/price_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/price_2"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/price_2"
                        android:layout_marginTop="8dp"
                        android:text="-0원"
                        android:textColor="@color/color_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/price_odar_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/price_3"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/price_2"
                        android:layout_marginTop="8dp"
                        android:text="173,070원"
                        android:textStyle="bold"
                        android:textColor="@color/color_main"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView >

    <TextView
        android:id="@+id/cart_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:background="@color/color_main"
        android:gravity="center"
        android:onClick="onClick"
        android:text="주문요청하기"
        android:textColor="@color/color_white" />
</RelativeLayout>
