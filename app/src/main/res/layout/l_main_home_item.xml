<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="108dp"
    android:layout_height="158dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_home_item_img"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:scaleType="fitXY" />

    <CheckBox
        android:id="@+id/main_home_item_img_ch"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="10dp"
        android:button="@null"
        android:checked="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/checkbox" />

    <TextView
        android:id="@+id/main_home_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_home_item_img"
        android:textColor="@color/color_text_light"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_home_item_name"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_home_item_odar_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_home_item_odar_price"
            android:textColor="@color/color_text_light"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/main_home_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_main"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>
