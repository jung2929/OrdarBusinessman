<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="정렬기준"
            android:textColor="@color/color_main"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/dialog_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="19dp">

            <RelativeLayout
                android:id="@+id/radio1_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">

                <ImageView
                    android:id="@+id/radio1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/radio_ch" />

                <TextView
                    android:id="@+id/radio1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/radio1"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/radio1"
                    android:text="최신순"
                    android:textColor="@color/color_text_light"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/radio2_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio1_back"
                android:layout_marginTop="9dp">

                <ImageView
                    android:id="@+id/radio2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/radio_unch" />

                <TextView
                    android:id="@+id/radio2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  android:layout_alignBaseline="@+id/radio2"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/radio2"
                    android:text="인기순"
                    android:textColor="@color/color_text_light"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/radio3_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio2_back"
                android:layout_marginTop="9dp">

                <ImageView
                    android:id="@+id/radio3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/radio_unch" />

                <TextView
                    android:id="@+id/radio3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/radio3"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/radio3"
                    android:text="유사업종순"
                    android:textColor="@color/color_text_light"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/dialog_exit"
            android:layout_width="74dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/dialog_contents"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/dialog_exit"
            android:textColor="@color/color_main" />
    </RelativeLayout>
</RelativeLayout>